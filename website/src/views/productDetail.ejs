<!DOCTYPE html>
<html>
    <%- include('partials/head')%>
    <body>
        <%-include('partials/header')%>
        <!---------Comienza el main------------------------>
        <div class="container">
            <h3 class="my-4 font-weight-bold sansserif mb-3"><%= product.item.nombre %></h1>
            <div class="row">
                <div class="col-md-7">
                    <img class="img-edit-form img-thumbnail " src="/img/<%= product.item.imagen %>" alt="tostadora">
                </div>
                <div class="col-md-4">
                    <h3 class="my-3 font-weight-bold sansserif mb-3">Descripcion</h3>
                    <p> <%= product.item.descripcion %> </p>
                    <% if (product.item.specs != null ) { %>
                    <h3 class="my-3 font-weight-bold sansserif mb-3">Cualidades</h3>
                    <ul>
                        <% for (let i = 0; i < product.item.specs.length; i++) {%>
                        <li><%= product.item.specs[i] %></li>
                        <% } %> 
                    </ul>
                    <% } %> 
                    <h4>Precio: $ <%= product.item.precio %>  </h4>
                    <div class="input-group mb-4">
                        <div class="input-group-prepend">
                          <button class="btn btn-outline-secondary" type="button" id="button-addon1">Cantidad</button>
                        </div>
                        <input type="number" class="form-control max__width" placeholder="Cantidad" aria-label="Example text with button addon" aria-describedby="button-addon3">
                      </div>    
                     <div class="input-group mb-3"> 
                     <div class="row">     
                        <button class="btn btn-primary mx-1" type="submit">Comprar</button>
                        <button type="button" class="btn mx-1 btn-warning">
                            <a href="/products/<%= product.item.id %>/edit "
                                class=" active">Editar</a>
                        </button>
                        <form class="" enctype="multipart/form-data" name="deleteform"
                            action="/products/<%= product.item.id %>?_method=DELETE" method="POST">
                            <input type="hidden">
                            <button type="submit" class="mx-1 btn btn-danger">Delete</button>
                        </form>
                        
                    </div>
                </div>
                </div>
            </div>
            <h3 class="my-4 font-weight-bold sansserif mb-3">Otros Productos</h3>
            <div class="row overflow-auto flex-nowrap card-deck">
                <% for( let i = 0; i < product.productList.length; i++) { %>
                <div class="col-md-3 col-sm-6 mb-4">
                    <a href="#">
                        <img class="img-thumbnail img-fluid" src="/img/<%= product.productList[i].imagen %> " alt="">
                    </a>
                </div>
                <% } %> 
            </div>
        </div>
        <%-include('partials/footer')%>
        <script>
            var button = document.querySelector('form[name="myform"] > button');
            button.addEventListener(function () {
                document.querySelector('form[name="myform"]').submit();
            });
        </script>
    </body>
</html>