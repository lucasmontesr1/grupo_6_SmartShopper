<!DOCTYPE html>
<html lang="es">

<%- include('partials/head')%>

<body>
    <%-include('partials/header')%>
    <div class=" container-fluid col-lg-6 col-md-auto col-sm-auto">
        <div class="flex-direction-column register-box mt-5 mb-5">
            <h4 class="aling-flex-start text-muted font-weight-bold sansserif">Registrate</h4>
            <div class="  ">
                <div class="card">
                    <div class="card-body d-flex flex-wrap">
                        <form action="/users/create" method="POST" enctype="multipart/form-data" id="form">
                            <div class="row justify-content-center p-3">
                                <div class="row">
                                    <div class=" d-flex col form-items">
                                        <input type="text" class="form-control d-flex" id="name" name="name"
                                            placeholder="Name"maxlength="50" minlength="2" required>
                                        <small id="nameHelp" class="form-text text-muted">Your name goes
                                            here</small>
                                    </div>
                                    <div class=" d-flex flex-wrap col form-items">
                                        <input type="text" class="form-control d-flex" id="surname" name="surname"
                                            placeholder="Surname"maxlength="50" minlength="2" required>
                                        <small id="surnameHelp" class="form-text text-muted">What's your
                                            surname</small>
                                    </div>
                                    <div class="col">
                                        <input type="text" class="form-control d-flex" id="document" name="document"
                                            placeholder="Document number">
                                        <small id="surnameHelp" class="form-text text-muted">Your ID</small>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class=" d-flex flex-wrap col-6 form-items">
                                        <input type="email" class="form-control d-flex" id="email" name="email"
                                            placeholder="Enter email" required>
                                        <small id="emailHelp" class="form-text text-muted">We'll never share your
                                            email with anyone else</small>
                                    </div>
                                    <div class="form-group d-flex flex-wrap col-6 form-items">
                                        <input type="password" class="form-control d-flex" id="password" name="password"
                                            placeholder="Password"maxlength="50" minlength="8" required>
                                        <small id="surnameHelp" class="form-text text-muted">We'll hash this one</small>
                                    </div>
                                </div>

                                <div class="col-12 mb-4">
                                    <input type="file" class="custom-file-input" id="imagen" name="imagen">
                                    <label id="file-name" class="custom-file-label" for="imagen">Selecciona una
                                        nueva
                                        imagen</label>
                                    <small id="surnameHelp" class="form-text text-muted">Make sure you look alright</small>
                                </div>


                                <div class="d-flex container form-button">
                                    <button type="submit" class="btn btn-primary col-lg-3 form-button">Crear</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- Card Slidder ends here-->
        <!-- Footer -->
    </div>
    </div>
    <%- include('partials/footer') %>
    <script>
        $('#imagen').change(function () {
            $("#file-name").text(this.files[0].name);
        });
    </script>
    <script src="/js/register.js"> </script>

</body>

</html>